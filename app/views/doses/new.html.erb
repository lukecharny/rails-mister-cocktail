<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path "dose.jpg" %>);">
  <div class="banner-content">
    <p>Add doses to</p>
    <h1><%= @cocktail.name %></h1>

      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: Ingredient.all %>
        <%= f.button :submit,  'ADD INGREDIENT', class: "btn-cocktail" %>
      <% end %>
  </div>
  </div>
